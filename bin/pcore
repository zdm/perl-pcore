#!/usr/bin/env perl

package main;

use FindBin;

# add pcore lib to @INC, if Pcore is dist
use if -f qq[$FindBin::RealBin/../share/dist.perl] && -d qq[$FindBin::RealBin/../lib/], lib => qq[$FindBin::RealBin/../lib/];
use Pcore qw[-embedded];
use Pcore::Core::CLI1;

Pcore::Core::CLI1->new( { class => 'main' } )->run( \@ARGV );

sub cli_cmd ($self) {
    return 'Pcore::Dist::Builder::CLI';
}

sub cli_abstract ($self) {
    return 'Distribution build tool';
}

sub cli_help ($self) {
    return;
}

1;
__END__
