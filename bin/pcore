#!/usr/bin/env perl

package main v0.1.0;

use FindBin;
use if -f qq[$FindBin::RealBin/../share/dist.perl] && -d qq[$FindBin::RealBin/../lib/], lib => qq[$FindBin::RealBin/../lib/];    # add pcore lib to @INC, if Pcore is dist
use Pcore qw[-embedded];
use Dist::Pcore::App;

Dist::Pcore::App->run;

1;
__END__
