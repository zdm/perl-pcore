#!/usr/bin/env perl

package main;

use FindBin;

use FindBin;
use if -f "$FindBin::RealBin/../share/dist.yaml" && -d "$FindBin::RealBin/../lib", lib => "$FindBin::RealBin/../lib";
use Pcore;

sub CLI ($self) {
    return {
        abstract => 'Distribution build tool',
        cmd      => 'Pcore::Dist::CLI::',
    };
}

1;
__END__
